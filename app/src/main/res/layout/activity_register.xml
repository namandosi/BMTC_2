<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">

    <TextView
        android:text="@string/adduserpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:id="@+id/adduserpage"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:text="@string/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/username"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_below="@+id/adduserpage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enterusername"
        android:textStyle="bold|italic"
        android:layout_below="@+id/username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:gravity="center_vertical|center" />

    <TextView
        android:text="@string/userdob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/userdob"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_below="@+id/enterusername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/enteruserdob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userdob"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:inputType="date|datetime"

        android:textStyle="bold|italic" />

    <TextView
        android:text="@string/userno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/userno"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_below="@+id/enteruserdob"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/enteruserno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userno"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:gravity="center_vertical|center"

        android:inputType="phone"
        android:textStyle="bold|italic" />

    <TextView
        android:text="@string/userpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/userpass"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_below="@+id/enteruserno"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/enteruserpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userpass"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:gravity="center_vertical|center"

        android:inputType="textPassword"
        android:textStyle="bold|italic" />

    <Button
        android:text="@string/addUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addUser"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:onClick="addUser"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/enteruserpass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <Button
        android:text="@string/viewDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewUsers"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:onClick="viewdata"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/addUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <Button
        android:text="@string/viewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewLogin"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_marginLeft="28dp"
        android:onClick="gotoLogin"
        android:layout_marginStart="28dp"
        android:layout_below="@+id/viewUsers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />


</RelativeLayout>
